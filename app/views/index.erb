<% if current_user %>
<div class="new-post">
    <a href="/posts/new" class="button">New Post</a>
</div>
<% end %>

<header>
    <h1>Finstagram</h1>
    <div class="login-info">
        <% if current_user %>
        <%= current_user.username %>
        <a href="/logout">Logout</a>
        <% else %>
        <a href="/login">Login</a>
        <a href="/signup">Signup</a>
        <% end %>
    </div>
 </header>

    <main role="main">
        <% @posts.each do |post| %>
        <%= erb(:'shared/post', {locals: {post: post} %>
    <% end %>
</main>

